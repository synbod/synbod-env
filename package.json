{
  "name": "synbod-env",
  "version": "0.0.1",
  "description": "The Synbod UI lib development environment",
  "main": "index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "fix:resolutions": "npx rimraf node_modules && npx npm-force-resolutions && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Synbod/synbod-env.git"
  },
  "keywords": [
    "webcomponents",
    "storybook",
    "lit-html"
  ],
  "author": "Chris Chou <chhschou@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Synbod/synbod-env/issues"
  },
  "homepage": "https://github.com/Synbod/synbod-env#readme",
  "editorconfig": {
    "root": true,
    "rules": {
      "*": {
        "indent_style": "space",
        "indent_size": "2",
        "end_of_line": "lf",
        "charset": "utf-8",
        "trim_trailing_whitespace": true,
        "insert_final_newline": true,
        "max_line_length": "120"
      },
      "*.{md,markdown}": {
        "trim_trailing_whitespace": false
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "resolutions": {
    "webpack": "4.28.4"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@storybook/polymer": "4.1.4",
    "@wasm-tool/wasm-pack-plugin": "^0.2.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "node-sass": "^4.11.0",
    "polymer-webpack-loader": "^2.0.3",
    "prettier": "^1.16.4",
    "sass": "^1.17.2",
    "sass-loader": "^7.1.0",
    "to-string-loader": "^1.1.5",
    "ts-loader": "^5.3.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "normalize.css": "^8.0.1"
  }
}
